{
  "name": "react-marked-renderer",
  "version": "0.2.1",
  "description": "React Marked Renderer - React components for the marked library",
  "repository": "https://github.com/mlaursen/react-marked-renderer",
  "author": "Mikkel Laursen <mlaursen03@gmail.com>",
  "license": "MIT",
  "main": "./dist/index.cjs",
  "module": "./dist/index.ejs",
  "browser": "./dist/index.min.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/",
    "src/"
  ],
  "sideEffects": false,
  "scripts": {
    "prepare": "husky install",
    "prebuild": "npm-run-all -p lint typecheck api-docs create-env",
    "run-script": "ts-node -T -P tsconfig.node.json",
    "create-env": "yarn run-script scripts/createEnv.ts",
    "api-docs": "yarn run-script scripts/typedoc.ts",
    "release": "yarn run-script scripts/release.ts",
    "lint": "eslint \"**/*.{js,jsx,ts,tsx}\"",
    "typecheck": "tsc -p tsconfig.check.json",
    "test": "jest",
    "start": "next dev",
    "build": "next build"
  },
  "dependencies": {
    "@types/marked": "^3.0.1",
    "marked": "^3.0.3"
  },
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@babel/preset-env": "^7.15.8",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.15.0",
    "@mlaursen/eslint-config": "^1.1.5",
    "@next/eslint-plugin-next": "^11.1.2",
    "@octokit/core": "^3.5.1",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^21.0.0",
    "@rollup/plugin-node-resolve": "^13.0.5",
    "@rollup/plugin-replace": "^3.0.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.1.2",
    "@types/inquirer": "^8.1.3",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.10.3",
    "@types/prismjs": "^1.16.6",
    "@types/react": "^17.0.27",
    "@types/react-dom": "^17.0.9",
    "babel-plugin-prismjs": "^2.1.0",
    "dotenv": "^10.0.0",
    "eslint": "^8.2.0",
    "filesize": "^8.0.3",
    "husky": "^7.0.2",
    "identity-obj-proxy": "^3.0.0",
    "inquirer": "^8.2.0",
    "jest": "^27.2.5",
    "jest-watch-typeahead": "^1.0.0",
    "lint-staged": "^11.2.0",
    "next": "^11.1.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.1",
    "prismjs": "^1.25.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-md": "^3.1.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.58.0",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.42.1",
    "standard-version": "^9.3.1",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "typedoc": "^0.22.5",
    "typescript": "^4.4.3"
  },
  "peerDependencies": {
    "react": ">= 16.8"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": false
    }
  },
  "lint-staged": {
    "**/*.{ts,tsx,scss,js,jsx,md,yml,json}": [
      "prettier --write"
    ]
  }
}
