{
  "name": "react-marked-renderer",
  "version": "1.1.1",
  "description": "React Marked Renderer - React components for the marked library",
  "repository": "https://github.com/mlaursen/react-marked-renderer",
  "author": "Mikkel Laursen <mlaursen03@gmail.com>",
  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "prebuild": "npm-run-all -p lint typecheck api-docs create-env",
    "run-script": "ts-node -T -P tsconfig.node.json",
    "create-env": "yarn run-script scripts/createEnv.ts",
    "api-docs": "yarn run-script scripts/typedoc.ts",
    "release": "yarn run-script scripts/release.ts",
    "lint": "eslint \"**/*.{js,jsx,ts,tsx}\"",
    "typecheck": "tsc -p tsconfig.check.json",
    "test": "jest",
    "dev": "next dev",
    "start": "next start",
    "build": "next build"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.ejs",
  "browser": "./dist/index.min.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/",
    "src/"
  ],
  "bugs": {
    "url": "https://github.com/mlaursen/react-marked-renderer/issues"
  },
  "keywords": [
    "github markdown",
    "markdown",
    "marked",
    "component",
    "react"
  ],
  "sideEffects": false,
  "dependencies": {
    "@types/marked": "^4.0.1",
    "marked": "^4.0.10"
  },
  "devDependencies": {
    "@babel/core": "^7.16.7",
    "@babel/plugin-transform-runtime": "^7.16.8",
    "@babel/preset-env": "^7.16.8",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@mlaursen/eslint-config": "^1.4.0",
    "@next/eslint-plugin-next": "^12.0.8",
    "@octokit/core": "^3.5.1",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-replace": "^3.0.1",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@types/inquirer": "^8.1.3",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.10",
    "@types/prismjs": "^1.16.6",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "dotenv": "^14.2.0",
    "eslint": "^8.7.0",
    "filesize": "^8.0.6",
    "husky": "^7.0.4",
    "identity-obj-proxy": "^3.0.0",
    "inquirer": "^8.2.0",
    "jest": "^27.4.7",
    "jest-watch-typeahead": "^1.0.0",
    "lint-staged": "^12.2.0",
    "next": "^12.0.8",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "prismjs": "^1.26.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-md": "^4.0.3",
    "rimraf": "^3.0.2",
    "rollup": "^2.64.0",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.49.0",
    "standard-version": "^9.3.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.4.0",
    "typedoc": "^0.22.11",
    "typescript": "^4.5.4"
  },
  "peerDependencies": {
    "react": ">= 16.14"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": false
    }
  },
  "lint-staged": {
    "**/*.{ts,tsx,scss,js,jsx,md,yml,json}": [
      "prettier --write"
    ]
  }
}
