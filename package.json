{
  "name": "react-marked-renderer",
  "version": "0.1.1",
  "description": "React Marked Renderer - React components for the marked library",
  "repository": "https://github.com/mlaursen/react-marked-renderer",
  "author": "Mikkel Laursen <mlaursen03@gmail.com>",
  "license": "MIT",
  "main": "./dist/index.cjs",
  "module": "./dist/index.ejs",
  "browser": "./dist/index.min.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/",
    "src/"
  ],
  "sideEffects": false,
  "scripts": {
    "prepare": "husky install",
    "prebuild": "npm-run-all -p lint typecheck api-docs",
    "clean-dist": "rimraf dist",
    "ci": "npm-run-all lint typecheck test",
    "api-docs": "node ./typedoc.js",
    "bundle": "rollup -c rollup.config.js",
    "update-version": "standard-version",
    "do-publish": "npm publish",
    "push-tag": "git push --follow-tags origin main",
    "release": "npm-run-all build-pkg update-version do-publish push-tag",
    "typedefs": "tsc -p tsconfig.typedefs.json",
    "build-pkg": "npm-run-all clean-dist bundle typedefs",
    "typecheck": "tsc -p tsconfig.check.json",
    "lint": "eslint \"**/*.{js,jsx,ts,tsx}\"",
    "test": "jest",
    "start": "next dev",
    "build": "next build"
  },
  "dependencies": {
    "@types/marked": "^3.0.0",
    "marked": "^3.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@babel/preset-env": "^7.15.4",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.15.0",
    "@mlaursen/changelog-preset": "^1.1.0",
    "@mlaursen/eslint-config": "^1.1.4",
    "@next/eslint-plugin-next": "^11.1.2",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^20.0.0",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@rollup/plugin-replace": "^3.0.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@types/jest": "^27.0.1",
    "@types/prismjs": "^1.16.6",
    "@types/react": "^17.0.19",
    "@types/react-dom": "^17.0.9",
    "babel-plugin-prismjs": "^2.1.0",
    "eslint": "^7.32.0",
    "husky": "^7.0.2",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.1.0",
    "jest-watch-typeahead": "^0.6.4",
    "lint-staged": "^11.1.2",
    "next": "^11.1.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "prismjs": "^1.24.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-md": "^3.0.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.56.3",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.39.0",
    "standard-version": "^9.3.1",
    "ts-jest": "^27.0.5",
    "typedoc": "^0.21.9",
    "typedoc-plugin-sourcefile-url": "^1.0.6",
    "typescript": "^4.4.2"
  },
  "peerDependencies": {
    "react": ">= 16.8"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": false
    }
  },
  "lint-staged": {
    "**/*.{ts,tsx,scss,js,jsx,md,yml,json}": [
      "prettier --write"
    ]
  }
}
